<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">monospace</item>
    </style>
    <style name="sknResValue" parent="AppTheme">
        <item name="android:width">45dip</item>
        <item name="android:maxLength">2</item>
        <item name="android:hint">@string/num_defaultTwo</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="sknAbilValue" parent="AppTheme">
        <item name="android:width">30dip</item>
        <item name="android:maxLength">1</item>
        <item name="android:hint">@string/num_defaultOne</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="sknTitleStat" parent="AppTheme">
        <item name="android:padding">4dip</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>
    <style name="sknAddPropButton" parent="AppTheme">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:contentDescription">@string/str_add</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="sknDelPropButton" parent="AppTheme">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@android:drawable/ic_delete</item>
        <item name="android:contentDescription">@string/str_del</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="sknPropiedadCasa" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
